<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 인터넷 권한 -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Lostfinder"
        android:networkSecurityConfig="@xml/network_security_config">

        <!-- ★ 앱 시작화면: 로그인 -->
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 회원가입 화면 -->
        <activity
            android:name=".ui.signup.SignupActivity"
            android:exported="false" />

        <!-- ★ 게시글 목록 화면 (로그인 성공 후 이동하는 화면) -->
        <activity
            android:name=".ui.post.list.PostListActivity"
            android:exported="false" />

        <!-- ★ 게시글 상세 화면 -->
        <activity
            android:name=".ui.post.detail.PostDetailActivity"
            android:exported="false" />

        <!-- 필요 시 게시글 작성 화면 추가 가능-->
        <activity
            android:name=".ui.post.create.PostCreateActivity"
            android:exported="false" />


    </application>

</manifest>
